<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Dashboard - EasySmart IoT</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body class="bg-light">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <strong>üè≠ EasySmart IoT</strong>
      </a>
      <div class="d-flex align-items-center">
        <span class="text-white me-3" id="userInfo">
          <small id="planBadge"></small>
        </span>
        <button class="btn btn-outline-light btn-sm" id="logout">
          üö™ Sair
        </button>
      </div>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container-fluid py-4">
    <!-- Header com a√ß√µes -->
    <div class="row mb-4">
      <div class="col-md-8">
        <h2 class="mb-0">Meus Dispositivos</h2>
        <p class="text-muted" id="deviceCount">Carregando...</p>
      </div>
      <div class="col-md-4 text-end">
        <button class="btn btn-primary" id="btnAddDevice" data-bs-toggle="modal" data-bs-target="#modalAddDevice">
          ‚ûï Adicionar Device
        </button>
        <button class="btn btn-outline-secondary" id="btnRefresh">
          üîÑ Atualizar
        </button>
      </div>
    </div>

    <!-- Loading State -->
    <div id="loadingState" class="text-center py-5">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Carregando...</span>
      </div>
      <p class="mt-3 text-muted">Carregando dispositivos...</p>
    </div>

    <!-- Empty State -->
    <div id="emptyState" class="text-center py-5 d-none">
      <div class="mb-4">
        <svg width="120" height="120" viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="60" cy="60" r="50" stroke="#dee2e6" stroke-width="4" fill="none"/>
          <path d="M40 60h40M60 40v40" stroke="#dee2e6" stroke-width="4" stroke-linecap="round"/>
        </svg>
      </div>
      <h4>Nenhum dispositivo cadastrado</h4>
      <p class="text-muted">Adicione seu primeiro dispositivo IoT para come√ßar</p>
      <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#modalAddDevice">
        ‚ûï Adicionar Primeiro Device
      </button>
    </div>

    <!-- Devices Grid -->
    <div id="devicesGrid" class="row g-4">
      <!-- Cards ser√£o inseridos aqui via JavaScript -->
    </div>
  </div>

  <!-- Modal: Adicionar Device -->
  <div class="modal fade" id="modalAddDevice" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">‚ûï Adicionar Dispositivo</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="formAddDevice">
            <!-- Template -->
            <div class="mb-3">
              <label class="form-label">Tipo de Dispositivo</label>
              <select class="form-select" id="deviceType" required>
                <option value="">Selecione...</option>
                <!-- Preenchido via JavaScript -->
              </select>
              <small class="text-muted" id="templateDescription"></small>
            </div>

            <!-- Nome -->
            <div class="mb-3">
              <label class="form-label">Nome</label>
              <input type="text" class="form-control" id="deviceName" 
                     placeholder="Ex: Compressor Sala 1" required>
            </div>

            <!-- Device ID -->
            <div class="mb-3">
              <label class="form-label">Device ID</label>
              <input type="text" class="form-control" id="deviceId" 
                     placeholder="Ex: COMP_001" required>
              <small class="text-muted">Identificador √∫nico do dispositivo</small>
            </div>

            <!-- Localiza√ß√£o -->
            <div class="mb-3">
              <label class="form-label">Localiza√ß√£o (opcional)</label>
              <input type="text" class="form-control" id="deviceLocation" 
                     placeholder="Ex: Sala de M√°quinas A">
            </div>

            <!-- Discovery Mode -->
            <div class="mb-3">
              <label class="form-label">Modo de Discovery</label>
              <select class="form-select" id="discoveryMode">
                <option value="template">Template (Entidades fixas)</option>
                <option value="auto">Auto (Via MQTT)</option>
                <option value="hybrid">H√≠brido (Template + MQTT)</option>
              </select>
            </div>

            <!-- Preview de Entidades -->
            <div id="entityPreview" class="alert alert-info d-none">
              <strong>Entidades que ser√£o criadas:</strong>
              <ul id="entityList" class="mb-0 mt-2"></ul>
            </div>

            <!-- Alert de erro -->
            <div id="addDeviceError" class="alert alert-danger d-none"></div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" class="btn btn-primary" id="btnSaveDevice">
            <span class="spinner-border spinner-border-sm d-none" id="saveSpinner"></span>
            Adicionar
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Toast para notifica√ß√µes -->
  <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="toast hide" role="alert">
      <div class="toast-header">
        <strong class="me-auto" id="toastTitle">Notifica√ß√£o</strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
      </div>
      <div class="toast-body" id="toastBody"></div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Dashboard JS -->
  <script src="/js/dashboard.js"></script>
</body>
</html>
